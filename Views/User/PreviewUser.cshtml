@using Microsoft.EntityFrameworkCore
@using NapredniObrazec.DataBase
@model IEnumerable<NapredniObrazec.Models.User>

@{
    ViewData["Title"] = "PreviewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="text-dark btn btn-primary float-left" asp-controller="User" asp-action="Add">Add Users</a>
    <a class="text-dark btn btn-danger float-right" asp-controller="User" asp-action="DeleteAll">Delete Users</a>
</div>

<hr/>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @using (Database db = new Database())
        {
            foreach (var item in db.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                        @Html.ActionLink("Details", "Show", new { id = item.Id })|
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
